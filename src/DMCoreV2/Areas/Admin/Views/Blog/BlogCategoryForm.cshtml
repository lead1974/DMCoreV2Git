@model DMCoreV2.Areas.Admin.ViewModels.Blog.BlogCategoryViewModel.BlogCategoryForm
@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using DMCoreV2.DataAccess.Models
@inject SignInManager<AuthUser> SignInManager

@{
    ViewData["Title"] = Model.IsNew ? "Create Category" : "Update Category";
}

<div class="col-lg-12">
    <h1 class="page-header">@(Model.IsNew ? "Create Category" : "Update Category")</h1>
    <div class="row">
        <section>
            <form asp-controller="BlogCategory" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" class="form-horizontal" asp-antiforgery="true" asp-area="admin">
                <div class="col-lg-8">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input asp-for="Id" type="hidden" />
                    <div class="form-group">
                        <label asp-for="Name" class="col-md-2 control-label"></label>
                        <div class="col-md-10">
                            <input asp-for="Name" class="form-control focus" type="text" />
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <div class="panel panel-info">
                            <div class="panel-heading">Category Actions</div>
                            <div class="panel-body">
                                <button type="submit" value='@(Model.IsNew?"CreateCategory": "UpdateCategory")' name='action' class="btn btn-primary">@(Model.IsNew ? "Create Category" : "Update Category")</button>
                                <button type="submit" value='Cancel' name='action' class="btn btn-default"> Cancel</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </section>
    </div>
</div>