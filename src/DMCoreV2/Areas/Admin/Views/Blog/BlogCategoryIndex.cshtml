@model DMCoreV2.Areas.Admin.ViewModels.Blog.BlogCategoryViewModel.BlogCategoryIndex

@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using DMCoreV2.DataAccess.Models.User
@using DMCoreV2.DataAccess.Models.Blog
@inject SignInManager<AuthUser> SignInManager

@{
    ViewData["Title"] = "Blog Categories";
}

<h1>Blog Categories</h1>
<div class="btn-toolbar">
    <div class="btn-group">
        <a href="@Url.Action("blogCategoryForm")" class="btn btn-primary" btn-sm"><i class="glyphicon glyphicon-plus"></i> Blog Categories </a>
    </div>

    <div class="btn-group pull-right">
        @if (Model.BlogCategories.HasPreviousPage)
        {
            <a href="@Url.Action("blogCategoryIndex", new {page=Model.BlogCategories.PreviousPage})" class="btn btn-primary btn-sm">
                <i class="glyphicon glyphicon-chevron-left"></i> Previous Page
            </a>

        }
        else
        {
            <a href="#" class="btn btn-default btn-disabled btn-sm">
                <i class="glyphicon glyphicon-chevron-left"></i> Previous Page
            </a>

        }

        @if (Model.BlogCategories.HasNextPage)
        {
            <a href="@Url.Action("blogCategoryIndex", new {page=Model.BlogCategories.NextPage})" class="btn btn-primary btn-sm">
                Next Page <i class="glyphicon glyphicon-chevron-right"></i> 
            </a>
        }
        else
        {
            <a href="#" class="btn btn-default btn-disabled btn-sm">
                Next Page <i class="glyphicon glyphicon-chevron-right"></i>
            </a>

        }
    </div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model.BlogCategories)
        {
            var cls = "";
            if (cat.Status.Contains("DELETED"))
            {
                cls = "danger";

            }
            <tr class="@cls">
                <td>@cat.Name</td>
                <td>
                    <a href="@Url.Action("editBlogCategory", new { cat.Id })" class="btn btn-btn-xs btn-primary">
                        <i class="glyphicon glyphicon-edit"></i> edit
                    </a>

                    @if (!cat.Status.Contains("DELETED"))
                    {
                    <div class="btn-group btn-group-xs">
                        <a href="#" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i> Trash
                        </a>
                        <a href="#" class="btn btn-danger dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="#">
                                    <i class="glyphicon glyphicon-remove"></i> delete
                                </a>
                            </li>
                        </ul>
                    </div>
                    }
                    else
                    {
                    <a href="#" class="btn btn-success">
                        <i class="glyphicon glyphicon-plus-sign"></i> restore
                    </a>
                    }
                </td>
            </tr>

        }
    </tbody>

</table>

</div>