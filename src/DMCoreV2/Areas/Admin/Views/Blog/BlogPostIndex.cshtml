@model DMCoreV2.Areas.Admin.ViewModels.Blog.BlogPostViewModel.BlogPostIndex

@using System.Collections.Generic
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@using DMCoreV2.DataAccess.Models
@inject SignInManager<AuthUser> SignInManager

@{
    ViewData["Title"] = "Posts";
}

<h1>Posts</h1>
<div class="btn-toolbar">
    <div class="btn-group">
        <a href="@Url.Action("blogpostform")" class="btn btn-primary" btn-sm"><i class="glyphicon glyphicon-plus"></i> Create Post </a>
    </div>

    <div class="btn-group pull-right">
        @if (Model.BlogPosts.HasPreviousPage)
        {
            <a href="@Url.Action("Index", new {page=Model.BlogPosts.PreviousPage})" class="btn btn-primary btn-sm">
                <i class="glyphicon glyphicon-chevron-left"></i> Previous Page
            </a>

        }
        else
        {
            <a href="#" class="btn btn-default btn-disabled btn-sm">
                <i class="glyphicon glyphicon-chevron-left"></i> Previous Page
            </a>

        }

        @if (Model.BlogPosts.HasNextPage)
        {
            <a href="@Url.Action("Index", new {page=Model.BlogPosts.NextPage})" class="btn btn-primary btn-sm">
                Next Page <i class="glyphicon glyphicon-chevron-right"></i> 
            </a>
        }
        else
        {
            <a href="#" class="btn btn-default btn-disabled btn-sm">
                Next Page <i class="glyphicon glyphicon-chevron-right"></i>
            </a>

        }
    </div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Date</th>
            <th>Tags</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model.BlogPosts)
        {
            var cls = "";
            if (post.Status.Contains("DELETED"))
            {
                cls = "danger";

            }
            <tr class="@cls">
                <td>@post.Title</td>
                <td>@post.Author</td>
                <td>@string.Join(", ", post.PostTags.Select(t => t.Tag.Name))</td>
                <td>@post.DateToBePosted</td>
                <td>
                    <a href="@Url.Action("edit", new { post.Id })" class="btn btn-btn-xs btn-primary">
                        <i class="glyphicon glyphicon-edit"></i> edit
                    </a>

                    @if (!post.Status.Contains("DELETED"))
                    {
                    <div class="btn-group btn-group-xs">
                        <a href="#" class="btn btn-danger">
                            <i class="glyphicon glyphicon-trash"></i> Trash
                        </a>
                        <a href="#" class="btn btn-danger dropdown-toggle" data-toggle="dropdown"><span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>
                                <a href="#">
                                    <i class="glyphicon glyphicon-remove"></i> delete
                                </a>
                            </li>
                        </ul>
                    </div>
                    }
                    else
                    {
                    <a href="#" class="btn btn-success">
                        <i class="glyphicon glyphicon-plus-sign"></i> restore
                    </a>
                    }
                </td>
            </tr>

        }
    </tbody>

</table>

</div>